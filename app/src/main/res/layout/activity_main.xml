<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 메인 콘텐츠 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 화면 75% 지점 가이드라인 (카메라 영역) -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75" />

            <!-- ========== 첫 화면: 클릭하여 STT 활성화 ========== -->
            <FrameLayout
                android:id="@+id/firstScreen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#1a1a2e"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guideline75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="화면을 터치한 후\n찾고 싶은 물건을 말해주세요"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:lineSpacingExtra="8dp" />

                <ProgressBar
                    android:id="@+id/sttProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="48dp"
                    android:indeterminateTint="#4CAF50"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- ========== 카메라 화면 (화면의 3/4 영역, 고정) ========== -->
            <FrameLayout
                android:id="@+id/cameraContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guideline75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.camera.view.PreviewView
                    android:id="@+id/previewView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.example.grabitTest.OverlayView
                    android:id="@+id/overlayView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <!-- 하단 상태 패널 (1/4) -->
            <LinearLayout
                android:id="@+id/statusPanel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#CC000000"
                app:layout_constraintTop_toBottomOf="@id/guideline75"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/targetRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="타겟: "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/targetSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minWidth="120dp" />

                    <Button
                        android:id="@+id/resetBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다시 찾기"
                        android:visibility="gone"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 좌측 상단 햄버거 버튼 -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="메뉴"
                android:src="@drawable/ic_menu_hamburger"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 우측 하단 첫 화면으로 돌아가기 버튼 (카메라 화면에서만 표시) -->
            <Button
                android:id="@+id/btnFirstScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="첫 화면"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/guideline75"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <!-- 좌측 슬라이드 품목 리스트 (Drawer) -->
    <FrameLayout
        android:id="@+id/drawerContent"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#1a1a2e">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="찾을 수 있는 품목"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/productListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#333333"
                android:dividerHeight="1dp" />
        </LinearLayout>
    </FrameLayout>
</androidx.drawerlayout.widget.DrawerLayout>
